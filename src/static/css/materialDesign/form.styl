[fy-form]
  position relative
  margin 1.3em 0
  input, textarea, select
    min-width 70px
    background transparent
    border none
    outline none
    border-bottom 2px solid rgba(0, 0, 0, .5)
    margin 0
    &:focus
      box-shadow 0px 2px rgba(0,0,0,0.14)
    &+label
      position absolute
      left 0
      bottom 0
    &.top+label, &.focus+label, &[type="date"]+label, &[type="time"]+label,&[type="color"]+label
      top -1.2rem
      bottom 1.2rem
  select
    cursor pointer
    appearance none
  textarea
    resize vertical
    &.top+label, &.focus+label
      top -1.2rem
      display block